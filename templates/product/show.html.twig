{% extends 'base.html.twig' %}

{% block title %}
    {{ data.name }} - Détails du produit
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <img src="https://th.bing.com/th/id/OIP.FYSkU4wuc235OaIyNpq6kwAAAA?rs=1&pid=ImgDetMain" class="card-img-top" alt="{{ data.name }}">
                    <div class="card-body">
                        <h2 class="card-title">{{ data.name }}</h2>
                        <p class="card-text">{{ data.description }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Détails du produit</h5>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Prix : {{ data.price | number_format(2, ',', ' ') }} €</h5>
                        <span><strong>Catégorie :</strong> {{ data.category.name }}</span>
                        <hr>
                        <div class="text-center">
                            <button class="btn btn-primary">Ajouter au panier</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
