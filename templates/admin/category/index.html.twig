{% extends 'admin/admin.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <div class="container">
        <a class="btn btn-primary m-3" href="{{ path('admin.category.create') }}">Créer une catégorie</a>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Nom de la catégorie</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for data in datas %}
                <tr>
                    <td>
                        <a href="{{ path('admin.category.edit', {id: data.id}) }}">{{ data.name }}</a>
                        <br>
                        <span>{{ data.slug }}</span>
                <span class="text-bg-light">{{ data.createdAt|date('d/m/Y') }}</span>
                        <strong>-</strong>
                <span class="text-bg-light">{{ data.updatedAt|date('d/m/Y') }}</span>
                    </td>
                    <td>
{#                        <a class="btn btn-info btn-sm" href="{{ path('category.show', {id: data.id}) }}">Show</a>#}
                        <a class="btn btn-warning btn-sm" href="{{ path('admin.category.edit', {id: data.id}) }}">Éditer</a>
                        <a class="btn btn-danger btn-sm" href="{{ path('admin.category.remove', {id: data.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
