                            <a type="submit" href="{{ path('recette.delete',{id:recipe.id}) }}" class="btn btn-sm btn-danger">Supprimer</a>

                            </form>
                          #}
                            <form method="post">
                            <a type="submit"  href="{{ path('admin.recipe.delete',{id:recipe.id}) }}" class="btn btn-sm btn-danger">Supprimer</a>
                            </form>
                        </div>

                    </td>
                </tr>
            {% else %}
                <tr>
